execute pathogen#infect()

syntax on
filetype plugin indent on
set background=dark
colorscheme solarized

set ls=2
set ignorecase
set number
set scrolloff=5
set hlsearch
set incsearch
set expandtab
set tabstop=2
set shiftwidth=2
set autoindent
set ruler
set smartcase
set cursorline
set hidden
set backspace=2
set diffopt+=iwhite

nnoremap ; :
imap jj <Esc>

